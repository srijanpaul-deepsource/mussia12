{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mussia12/pulumi-gcp": ["libs/pulumi/gcp/src/index.ts"],
      "@mussia12/pulumi/aws": ["libs/pulumi/aws/src/index.ts"],
      "@mussia12/pulumi/shared-libs": ["libs/pulumi/shared-libs/src/index.ts"],
      "@mussia12/pulumi/shared-types": [
        "libs/pulumi/shared-types/src/index.ts"
      ],
      "@mussia12/shared/data-types": ["libs/shared/data-types/src/index.ts"],
      "@mussia12/shared/mongoose-schemas": [
        "libs/shared/mongoose-schemas/src/index.ts"
      ],
      "@mussia12/shared/validations": ["libs/shared/validations/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
